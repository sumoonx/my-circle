<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingLeft="@dimen/menu_padding_left_right"
    android:paddingRight="@dimen/menu_padding_left_right"
    android:paddingTop="@dimen/menu_item_padding_top_bottom"
    android:paddingBottom="@dimen/menu_item_padding_top_bottom"
    android:background="?android:attr/selectableItemBackground"
    >

    <ImageView
        android:id="@+id/drawer_label_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/drawer_header_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:maxLines="1"
        android:layout_marginLeft="32dp"
        android:gravity="left|center_vertical"
        android:textColor="@color/secondary_text"
        android:textSize="16sp"
        />

  <TextView
      android:id="@+id/drawer_label_unreadCnt"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:minWidth="30dp"
      android:textSize="14sp"
      android:textColor="@color/white"
      android:gravity="center"
      android:background="@drawable/menu_unread_count"
      />

</LinearLayout>