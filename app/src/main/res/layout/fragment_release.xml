<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/fr_body_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/fr_goodname_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top">
            <TextView
                android:id="@+id/fr_goodname_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/left"
                android:layout_gravity="center"
                android:text="@string/fragment_release_goodname"
                android:textSize="@dimen/normal_size"/>
            <EditText
                android:id="@+id/fr_goodname_edittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height"
                android:textSize="@dimen/sub_normal_size"
                android:hint="@string/fragment_release_name"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:layout_marginRight="@dimen/right"
                android:layout_marginLeft="@dimen/left_elem"
                android:background="@drawable/back_circle"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fr_goodinfo_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fr_goodname_linearlayout"
            android:layout_marginTop="@dimen/top_elem">
            <TextView
                android:id="@+id/fr_goodinfo_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/left"
                android:text="@string/fragment_release_gooddescription"
                android:textSize="@dimen/normal_size" />
            <EditText
                android:id="@+id/fr_goodinfo_edittext"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginRight="@dimen/right"
                android:layout_marginLeft="@dimen/left_elem"
                android:hint="@string/fragment_release_description"
                android:textSize="@dimen/sub_normal_size"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:gravity="top"
                android:background="@drawable/back_circle"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fr_goodsort_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fr_goodinfo_linearlayout"
            android:layout_marginTop="@dimen/top_elem">
            <TextView
                android:id="@+id/fr_goodsort_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/left"
                android:text="@string/fragment_release_goodsort"
                android:textSize="@dimen/normal_size"/>
            <Spinner android:id="@+id/fr_goodsort_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/left_elem"
                android:layout_marginRight="@dimen/right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fr_goodpic_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fr_goodsort_linearlayout"
            >
            <Button
                android:id="@+id/fr_addgoodpic_btn"
                android:layout_width="120dp"
                android:layout_height="128dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/button"
                android:text="添加图片"
                android:layout_marginLeft="10dp"
                android:textColor="#ffffff"
                android:textSize="@dimen/normal_size"/>
            <ImageView
                android:id="@+id/fr_addgoodpic_img"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:src="@drawable/meishi_s"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fr_contact_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fr_goodpic_linearlayout"
            android:layout_marginTop="@dimen/top_elem">
            <TextView
                android:id="@+id/fr_contact_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/left"
                android:text="@string/fragment_release_usercontact"
                android:textSize="@dimen/normal_size"/>
            <EditText
                android:id="@+id/fr_contact_edittext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_height"
                android:layout_marginRight="@dimen/right"
                android:layout_marginLeft="@dimen/left_elem"
                android:textSize="@dimen/sub_normal_size"
                android:hint="@string/fragment_release_contact"
                android:paddingLeft="10dp"
                android:background="@drawable/back_circle"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fr_contact_linearlayout"
            android:layout_marginTop="@dimen/top_elem"
            android:orientation="vertical">
            <Button
                android:id="@+id/fr_admitrelease_btn"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_gravity="center"
                android:background="@drawable/button"
                android:layout_centerInParent="true"
                android:text="@string/fragment_release_admit_release"
                android:textColor="#ffffff"
                android:textSize="@dimen/normal_size" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
